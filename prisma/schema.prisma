generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String
  type String
  description String?
  price Float
  categoryId String

  stock Int @default(0)
  category Category @relation(fields: [categoryId], references: [id])
  inventory Inventory[]
  auditory AuditoryInventory[]
}

model Category {
  id String @id @default(uuid())
  name String
  products Product[]
}

model Inventory {
  id String @id @default(uuid())
  productId String
  quantity Int
  type Moviment // Enum: 'ENTRADA' o 'SALIDA'
  date DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
}

// Prisma Enum
enum Moviment {
  ENTRADA
  SALIDA
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  rol Rol // Enum: 'ADMIN' o 'EMPLEADO'

  auditory AuditoryInventory[]
}

// Prisma Enum
enum Rol {
  ADMIN
  EMPLEADO
}

model AuditoryInventory {
  id String @id @default(uuid())
  productId String
  userId String
  change String
  date DateTime @default(now())

  product Product @relation(fields:[productId], references: [id])
  user User @relation(fields: [userId], references: [id])
}